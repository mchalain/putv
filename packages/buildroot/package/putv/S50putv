#!/bin/sh
#
# Starts putv.
#


start() {
  printf "Starting ouiradio: "
  /etc/setting.d/putv.sh client
  /etc/setting.d/putv.sh start
  if [ $? -eq 0 ]; then
    echo "OK"
  else
    echo "KO"
  fi
}
stop() {
  printf "Stopping ouiradio: "
  /etc/setting.d/putv.sh stop
  echo "OK"
}
restart() {
	stop
	start
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|reload)
	restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?

