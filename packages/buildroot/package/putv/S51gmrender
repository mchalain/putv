#!/bin/sh
#
# Starts putv.
#

SYSCONFDIR=/etc/
RUNDIR=/var/run
SBINDIR=/usr/sbin
BINDIR=/usr/bin
LIBDIR=/usr/lib

DAEMON=upnprender
OPTIONS="-o putv"

start() {
	printf "Starting UPnP renderer: "
	start-stop-daemon -b -S -q -p ${RUNDIR}/${DAEMON}.pid --exec ${BINDIR}/${DAEMON} -- -d ${OPTIONS}
	if [ $? -eq 0 ]; then
		echo "OK"
	else
		echo "KO"
	fi
}
stop() {
	printf "Stopping UPnP renderer: "
	if [ -e ${RUNDIR}/${DAEMON}.pid ]; then
		start-stop-daemon -K -q -p ${RUNDIR}/${DAEMON}.pid
	fi
	echo "OK"
}
restart() {
	stop
	start
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|reload)
	restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?

